{
  "name": "@christianmaf80/agentic-workflow",
  "version": "1.38.0-beta.10",
  "description": "Portable agentic workflow orchestration system with strict identity and gate discipline",
  "type": "module",
  "displayName": "Agentic Workflow",
  "main": "./dist/cli/index.js",
  "engines": {
    "vscode": "^1.108.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mainView"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "main",
          "title": "Agent Chat",
          "icon": "media/agent-chat.svg"
        }
      ]
    },
    "views": {
      "main": [
        {
          "id": "mainView",
          "name": "Agent Chat",
          "icon": "media/agent-chat.svg",
          "type": "webview"
        }
      ]
    }
  },
  "bin": {
    "agentic-workflow": "bin/cli.js"
  },
  "files": [
    "dist/cli",
    "dist/core",
    "dist/infrastructure",
    "dist/agent",
    "dist/mcp",
    "dist/runtime",
    "bin",
    "README.md",
    "LICENSE",
    "RELEASE_PROCESS.md"
  ],
  "scripts": {
    "build": "node scripts/clean-dist.mjs && tsc -p tsconfig.build.json && npm run copy-assets",
    "copy-assets": "mkdir -p dist/agent && cp -r src/agentic-system-structure/* dist/agent/",
    "start": "node dist/index.js",
    "publish:npm": "npm publish --registry https://registry.npmjs.org --access public",
    "publish:github": "npm publish --registry https://npm.pkg.github.com",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:coverage": "npm run build && vitest run --exclude test/chatkit-protocol.test.js --exclude test/view-templates.test.js --coverage --coverage.include='src/runtime/**' --coverage.include='src/mcp/**' --coverage.thresholds.lines=100 --coverage.thresholds.functions=100 --coverage.thresholds.branches=100 --coverage.thresholds.statements=100",
    "package": "npm pack && mv *.tgz .backups/npm-packages/",
    "dev:setup": "npm run build && npm link",
    "dev:refresh": "npm run build",
    "dev:clean": "npm run clean && rm -rf dist node_modules && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christian-marino-alvarez/agentic-workflow.git"
  },
  "bugs": {
    "url": "https://github.com/christian-marino-alvarez/agentic-workflow/issues"
  },
  "homepage": "https://github.com/christian-marino-alvarez/agentic-workflow#readme",
  "keywords": [
    "agent",
    "workflow",
    "orchestration",
    "ai",
    "llm",
    "agentic",
    "governance"
  ],
  "author": "Christian Marino Alvarez",
  "license": "ISC",
  "dependencies": {
    "@christianmaf80/agentic-workflow": "^1.37.0-beta.9",
    "@clack/prompts": "^0.7.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "commander": "^11.1.0",
    "gray-matter": "^4.0.3",
    "lit": "^3.3.2",
    "openai": "^6.17.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.108.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "diff": "8.0.3"
  }
}