{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-backend",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": [
      "node"
    ],
    "noEmit": false
  },
  "include": [
    "src/backend/**/*",
    "src/extension/modules/*/backend/**/*",
    "src/infrastructure/**/*"
  ],
  "exclude": [
    "src/extension/modules/*/background/**/*",
    "src/extension/modules/*/web/**/*",
    "src/extension/core/view/**/*",
    "src/extension/core/controller/**/*",
    "node_modules",
    "**/*.test.ts"
  ]
}